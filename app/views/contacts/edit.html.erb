<div class="row">
  <div class="col-xs-12 center">
    <h1> <%=(t 'generic.edit_contact' )%> </h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for [current_user, @contact] do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit (t 'generic.update' ), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
