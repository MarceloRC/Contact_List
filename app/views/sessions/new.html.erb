<div class="row">
  <div class="col-xs-12 center">
    <h1><%= (t 'generic.login')%></h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for :session, url: entrar_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label (t 'generic.email') %>
        <%= f.email_field :email, placeholder: (t 'generic.email'), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label (t 'generic.password') %>
        <%= f.password_field :password, placeholder: (t 'generic.password'), class: 'form-control' %>
      </div>

      <%= f.submit (t 'generic.login' ), class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
